                    <button>search</button>
                </div>
            </div>
        <!-- </div> -->
        <!-- End Banner -->


        <img src="../../Public/img/avrtaCart.png" width="50px">
        <p>Giao tận nơi</p>
    </div>
    <div class="article" id="loadsp">
        <% dsSP.forEach(sp=> { %>
            <div class="box">
                <a href="/detail/<%= sp.id %>">
                    <img  class="cart-image" src="../Public/img/<%= sp.image %>"
                        alt="">
                </a>
                <p style="text-align: center; font-size: 20px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis"
                    class="cart-name"><%= sp.name %></p>
                <p style="text-align: center; font-size: 20px">Giá: <span class="cart-price"><%= sp.price %>đ</span></p>
                <a class="button" href="/detail/<%= sp.id %>"><input style="width: 190px; height: 40px; margin-left: auto; margin-top: 15px" type="submit" class="buyfood" name="dathang" value="Xem chỉ tiết"></a>
            </div>
            <% }); %>
    </div>
    </div>
